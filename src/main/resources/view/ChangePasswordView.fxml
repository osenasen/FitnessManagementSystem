<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="fms.controller.ChangePasswordController">
    <children>
        <Label layoutX="14.0" layoutY="10.0" text="Current Password" />
        <PasswordField fx:id="currentPasswordField" layoutX="150.0" layoutY="10.0" />
        <Label layoutX="14.0" layoutY="50.0" text="New Password" />
        <PasswordField fx:id="newPasswordField" layoutX="150.0" layoutY="50.0" />
        <Label layoutX="14.0" layoutY="90.0" text="Repeat New Password" />
        <PasswordField fx:id="repeatNewPasswordField" layoutX="150.0" layoutY="90.0" />
        <Button layoutX="150.0" layoutY="130.0" text="Change Password" onAction="#handleChangePassword"/>
    </children>
</AnchorPane>
