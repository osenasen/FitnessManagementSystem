<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fms.controller.ChangePasswordController">
    <PasswordField fx:id="oldPasswordField" promptText="Enter old password" layoutX="50" layoutY="20"/>
    <PasswordField fx:id="newPasswordField" promptText="Enter new password" layoutX="50" layoutY="60"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" layoutX="50" layoutY="100"/>
    <Button text="Change Password" onAction="#handleChangePassword" layoutX="50" layoutY="140"/>
    <Label fx:id="errorLabel" textFill="red" layoutX="50" layoutY="180"/>
</AnchorPane>
