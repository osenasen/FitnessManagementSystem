<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="recipeBox" alignment="TOP_CENTER" spacing="10" styleClass="recipe-box" stylesheets="@../css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="fms.controller.RecipeBoxController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Label fx:id="nameLabel" styleClass="recipe-name" wrapText="true" />
    <ImageView fx:id="recipeImage" fitWidth="180" fitHeight="180" preserveRatio="true" styleClass="recipe-image"/>
    <HBox alignment="CENTER" spacing="10">
        <VBox alignment="CENTER" styleClass="nutrition-info">
            <Label styleClass="nutrition-label" text="Proteins" />
            <Label fx:id="proteinsLabel" styleClass="nutrition-value" />
        </VBox>
        <VBox alignment="CENTER" styleClass="nutrition-info">
            <Label styleClass="nutrition-label" text="Carbs" />
            <Label fx:id="carbsLabel" styleClass="nutrition-value" />
        </VBox>
        <VBox alignment="CENTER" styleClass="nutrition-info">
            <Label styleClass="nutrition-label" text="Calories" />
            <Label fx:id="caloriesLabel" styleClass="nutrition-value" />
        </VBox>
    </HBox>
    <Hyperlink fx:id="recipeLink" styleClass="recipe-link" text="View Recipe" />
</VBox>
